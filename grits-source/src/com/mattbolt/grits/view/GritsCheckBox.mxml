<!---
* This class is used as the check box, or toggle button for grits.
* 
* @author Matt Bolt [mbolt35&#64;gmail.com]
-->
<s:Group 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:view="com.mattbolt.grits.view.*">
    
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    
    <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
        @namespace mx "library://ns.adobe.com/flex/mx";
        @namespace view "com.mattbolt.grits.view.*";
        
        .defaultCheckBoxLabelStyle {
            font-family: Arial;
            font-size: 16;
            color: #ABABAB;
        }
    </fx:Style>
    
    
    <fx:Script>
        <![CDATA[
           
            [Bindable]
            
            /**
             * This property is set to <code>true</code> if the checkbox is selected
             * 
             * @default false
             */
            public var selected:Boolean = false;
            
            [Bindable]
            
            /**
             * This property contains the style name for the label
             * 
             * @default defaultCheckBoxLabelStyle
             */
            public var labelStyleName:String = "defaultCheckBoxLabelStyle";
            
            [Bindable]
            
            /**
             * This property contains the label for the check box
             */
            public var label:String;
            
        ]]>
    </fx:Script>
    
    <s:layout>
        <s:HorizontalLayout />
    </s:layout>
    
    <s:Group>
        <s:layout>
            <s:VerticalLayout />
        </s:layout>
        <mx:Spacer height="100%"/>
        <s:Label styleName="{labelStyleName}" text="{label}" verticalAlign="middle"/>
        <mx:Spacer height="100%"/>
    </s:Group>
    <mx:Spacer width="100%"/>
    
    <view:GritsCheckBoxBase id="checkBoxBase" currentState="{selected ? 'Selected' : 'Deselected'}"/>
</s:Group>
