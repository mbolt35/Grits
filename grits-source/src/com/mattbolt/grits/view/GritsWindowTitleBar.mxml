<!---
 * This class is used as the title bar for the default log window.
 * 
 * @author Matt Bolt [mbolt35&#64;gmail.com]
 -->
<s:BorderContainer 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    mouseDown="onMouseDown(event);"
    width="400" height="{titleContainer.height}">

    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    
    <fx:Script>
        <![CDATA[
            //----------------------------------
            //  imports
            //----------------------------------
            
            import flash.display.NativeWindow;
            
            
            //--------------------------------------------------------------------------
            //
            //  Variables
            //
            //--------------------------------------------------------------------------
            
            /**
             * @private
             * the native window to drag
             */
            private var _window:NativeWindow;
            
            
            //--------------------------------------------------------------------------
            //
            //  Methods: Event Handlers
            //
            //--------------------------------------------------------------------------
            
            /**
             * @private
             * handles the mouse down - drag window
             */
            private function onMouseDown(event:MouseEvent):void {
                if (!_window) {
                    return;
                }
                
                _window.startMove();
            }
            
            
            //--------------------------------------------------------------------------
            //
            //  Properties
            //
            //--------------------------------------------------------------------------

            [Bindable] 
            
            /**
             * This property contains the <code>NativeWindow</code> which this title bar will
             * drag.
             */
            public function get nativeWindow():NativeWindow {
                return _window;
            }
            
            /**
             * @private
             */
            public function set nativeWindow(value:NativeWindow):void {
                _window = value;
            }
            
            [Bindable]
            
            /**
             * This property contains the title of the window
             */
            public var windowTitle:String;
            
        ]]>
    </fx:Script>
    
    <s:BorderContainer id="titleContainer"
        backgroundImage="@Embed(source='/../assets/images/title-bar.png')" 
        backgroundImageFillMode="scale" 
        left="0" top="0" 
        width="100%" height="29">
        <s:layout>
            <s:HorizontalLayout 
                verticalAlign="middle"
                paddingBottom="2" paddingTop="1" 
                paddingLeft="2" paddingRight="4" 
                gap="1"/>
        </s:layout>
        <mx:Image 
            source="@Embed(source='/../assets/icons/icon32.png')"
            width="24" height="24" 
            smoothBitmapContent="true" cacheAsBitmap="true"
            maintainAspectRatio="true" scaleContent="true"/>
        <s:Label fontFamily="Arial" color="#ABABAB" text="{windowTitle}"/>
        <mx:Spacer width="100%"/>
        <s:Label id="closeButton" text="X" mouseEnabled="true" fontFamily="Arial Black" fontSize="14" color="#ABABAB"
            click="if (_window) { _window.close(); }"
            mouseOver="closeButton.setStyle('color', 0xDEDEDE);"
            mouseOut="closeButton.setStyle('color', 0xABABAB);"/>
    </s:BorderContainer>
</s:BorderContainer>
