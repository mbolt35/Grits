<!---
* This class represents the frame of the progress bar styled like the iphone.
* 
* @author Matt Bolt [mbolt35&#64;gmail.com]
-->
<s:SparkSkin 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    minHeight="9">

    <fx:Script>
        <![CDATA[
            /**
             * @private
             */
            protected override function initializationComplete():void {
                useChromeColor = true;
                
                super.initializationComplete();
            }
        ]]>
    </fx:Script>
    
    <s:HGroup width="100%" height="12" maxHeight="12" minHeight="12" paddingBottom="0" paddingRight="0" paddingLeft="0" paddingTop="0" gap="0">
        <mx:Image 
            source="@Embed(source='/../assets/skins/ifone-progress-bar/pbar1.png')" 
            minWidth="7" width="7" maxWidth="7"
            minHeight="12" height="12" maxHeight="12"
            autoLoad="true" 
            maintainAspectRatio="true"
            scaleContent="false"/>
        <mx:Image 
            source="@Embed(source='/../assets/skins/ifone-progress-bar/pbar2.png')" 
            width="100%"
            minHeight="12" height="12" maxHeight="12"
            autoLoad="true" 
            maintainAspectRatio="false"
            scaleContent="true"/>
        <mx:Image 
            source="@Embed(source='/../assets/skins/ifone-progress-bar/pbar3.png')" 
            minWidth="7" width="7" maxWidth="7"
            minHeight="12" height="12" maxHeight="12"
            autoLoad="true" 
            maintainAspectRatio="true"
            scaleContent="false"/>
    </s:HGroup>
    
    
</s:SparkSkin>
